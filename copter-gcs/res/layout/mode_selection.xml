<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:gravity="center">

	<TableLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/tableLayout2">

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/text1" android:text="Mode 0"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_marginRight="20dip" />
			<Spinner android:id="@+id/mode1" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></Spinner>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/text2" android:text="Mode 1"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_marginRight="20dip" />
			<Spinner android:id="@+id/mode2" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></Spinner>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/text3" android:text="Mode 2"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_marginRight="20dip" />
			<Spinner android:id="@+id/mode3" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></Spinner>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/text4" android:text="Mode 3"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_marginRight="20dip" />
			<Spinner android:id="@+id/mode4" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></Spinner>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/text5" android:text="Mode 4"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_marginRight="20dip" />
			<Spinner android:id="@+id/mode5" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></Spinner>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/text6" android:text="Mode 5"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_marginRight="20dip" />
			<Spinner android:id="@+id/mode6" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></Spinner>
		</TableRow>
	</TableLayout>

	<TextView android:text="Not Loaded" android:id="@+id/modeIndicator"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:gravity="center" />


</LinearLayout>